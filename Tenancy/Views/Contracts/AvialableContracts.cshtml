@model IEnumerable<Tenancy.Models.Contract>

@{
    ViewBag.Title = "AvialableContracts";
}

<h2>Заявки на заключение договора</h2>



<div style="color:red;">@ViewBag.Message</div>
<br>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Дата начала аренды")
        </th>
        <th>
            @Html.DisplayName("Дата окончания аренды")
        </th>
        
        <th>
            @Html.DisplayName("Организация")
        </th>
        <th>
            @Html.DisplayName("Код помещения")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RentalStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalEndDate)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Lessee.Organization)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Premises.PremisesCode)
            </td>
            <td>
                @Html.ActionLink("Заключить договор", "Edit", new { id = item.Lessee_ID }) 
                <!--Html.ActionLink("Details", "Details", new { id = item.ContractCode }) |
                Html.ActionLink("Delete", "Delete", new { id = item.ContractCode })-->
            </td>
        </tr>
    }

</table>
